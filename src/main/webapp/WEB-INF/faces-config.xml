<?xml version="1.0" encoding="utf-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <name>ucm</name>
    
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>		
		
	</application>
	
	<factory> 
  		<exception-handler-factory>
    	com.sfs.ucm.exception.CustomExceptionHandlerFactory
  		</exception-handler-factory>
	</factory>
		 	
	<lifecycle> <phase-listener>com.sfs.ucm.view.MultiPageMessagesSupport</phase-listener> </lifecycle>	    
    
 	<component>
        <component-type>org.primefaces.component.RoninMenu</component-type>
        <component-class>org.primefaces.ronin.component.menu.RoninMenu</component-class>
    </component>
    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.RoninMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.ronin.component.menu.RoninMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
     
</faces-config>